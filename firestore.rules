
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      // Use exists() instead of get() to avoid recursive loops and for efficiency.
      // This checks if a document exists for the user in the /users collection
      // and if that document has the role 'admin' or 'leader'.
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'leader');
    }
    
    match /appointments/{appointmentId} {
      allow get: if true;
      allow list: if isAdmin() || 
                  (isSignedIn() && request.query.where.hasAny(['inviteScope', 'in', ['all', 'community']])) ||
                  (!isSignedIn() && request.query.where.hasAny(['inviteScope', '==', 'all']));
      allow write: if isSignedIn();
    }

    match /appointmentSummaries/{year} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /communityTopics/{topicId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();

      match /messages/{messageId} {
        allow get, list: if true;
        allow create, update, delete: if isSignedIn();
      }
    }
    
    match /dailyContent/{dateId} {
      match /chatMessages/{messageId} {
        allow get, list: if true;
        allow create, update, delete: if isSignedIn();
      }
    }

    match /users/{userId} {
      // An admin can get any user's profile. A user can get their own.
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow write: if isOwner(userId) || isAdmin();

      match /glossaryProposals/{proposalId} {
        allow get, list, update, delete, create: if isOwner(userId);
      }
    }
    
    match /users/{userId}/notes/{noteId} {
      allow read, write: if isOwner(userId);
    }
    
    match /users/{userId}/calendarPresets/{presetId} {
        allow read, write: if isOwner(userId);
    }

    match /users/{userId}/calendarPreferences/{prefId} {
        allow read, write: if isOwner(userId);
    }

    match /glossaryTerms/{termId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /glossaryProposals/{proposalId} {
        allow create: if isSignedIn();
        allow read, list, get, update, delete: if isAdmin();
    }
    
    match /scriptureReadings/{readingId} {
      allow get: if resource.data.status == 'approved' || (isSignedIn() && (isOwner(resource.data.userId) || isAdmin()));
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin());
    }

    match /scriptureReadings {
       allow list: if isAdmin() || (request.query.where[0] == 'status' && request.query.where[2] == 'approved') || (isSignedIn() && request.query.where[0] == 'userId' && request.query.where[2] == request.auth.uid);
    }

    match /podcast_series/{podcastSeriesId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }
  }
}
