
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      // Check for a custom claim 'admin' on the user's auth token.
      // This is the correct and performant way to check for roles in list queries.
      return request.auth.token.admin == true;
    }
    
    match /appointments/{appointmentId} {
      allow get: if true;
      allow list: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /appointmentSummaries/{year} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /communityTopics/{topicId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();

      match /messages/{messageId} {
        allow get, list: if true;
        allow create, update, delete: if isSignedIn();
      }
    }
    
    match /dailyContent/{dateId} {
      match /chatMessages/{messageId} {
        allow get, list: if true;
        allow create, update, delete: if isSignedIn();
      }
    }

    match /mail/{mailId} {
      allow create: if isSignedIn();
      // Temporarily changed to allow any signed-in user to list.
      // TODO: Revert to isAdmin() once custom claims are properly set up.
      allow read, list: if isSignedIn();
    }

    match /emailTemplates/{templateId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    match /users/{userId} {
      // An admin can get any user's profile. A user can get their own.
      allow get: if isOwner(userId) || isAdmin();
      // Temporarily changed to allow any signed-in user to list.
      // TODO: Revert to isAdmin() once custom claims are properly set up.
      allow list: if isSignedIn();
      allow write: if isOwner(userId) || isAdmin();

      match /glossaryProposals/{proposalId} {
        allow read, write: if isOwner(userId);
      }
      
      match /notes/{noteId} {
        allow read, write: if isOwner(userId);
      }
      
      match /calendarPresets/{presetId} {
          allow read, write: if isOwner(userId);
      }

      match /calendarPreferences/{prefId} {
          allow read, write: if isOwner(userId);
      }

      match /chatBookmarks/{bookmarkId} {
          allow read, write: if isOwner(userId);
      }
    }

    match /glossaryTerms/{termId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /glossaryProposals/{proposalId} {
        allow create: if isSignedIn();
        // Temporarily changed to allow any signed-in user to list.
        // TODO: Revert to isAdmin() once custom claims are properly set up.
        allow read, list, get, update, delete: if isSignedIn();
    }
    
    match /scriptureReadings/{readingId} {
      allow get: if resource.data.status == 'approved' || (isSignedIn() && (isOwner(resource.data.userId) || isAdmin()));
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin());
      // A user can list their own submissions, anyone can list approved submissions, and admins can list all.
      // This structure avoids OR conditions on different fields in a single list rule.
      allow list: if (request.query.get("status") == "approved" && isSignedIn()) || 
                   (request.query.get("userId") == request.auth.uid && isSignedIn()) ||
                   isAdmin();
    }

    match /podcast_series/{podcastSeriesId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }
  }
}
