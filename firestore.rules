
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    match /appointments/{appointmentId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /appointmentSummaries/{year} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /communityTopics/{topicId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();

      match /messages/{messageId} {
        allow get, list: if true;
        allow create, update, delete: if isSignedIn();
      }
    }
    
    match /dailyContent/{dateId} {
      match /chatMessages/{messageId} {
        allow get, list: if true;
        allow create, update, delete: if isSignedIn();
      }
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }

    match /glossaryTerms/{termId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /glossaryProposals/{proposalId} {
        allow create: if isSignedIn();
        allow read, list, get, update, delete: if isAdmin();
    }
    
    match /scriptureReadings/{readingId} {
      // Admins can read any scripture. Users can read their own, or any approved scripture.
      allow get: if isAdmin() || (isSignedIn() && isOwner(resource.data.userId)) || resource.data.status == 'approved';
      
      // Admins can list scriptures if they are querying by status. Users can list their own.
      allow list: if (isAdmin() && request.query.keys().hasAny(['status'])) || (isSignedIn() && request.query.userId == request.auth.uid);
      
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (isSignedIn() && isOwner(resource.data.userId));
    }

    match /podcast_series/{podcastSeriesId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }
  }
}
