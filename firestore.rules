
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow admins to perform collection group queries for moderation
    match /{path=**}/notes/{noteId} {
      allow read, list: if true; // In a real app, you'd check for an admin role: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    match /{path=**}/glossaryProposals/{proposalId} {
      allow read, list: if true; // Same as above, restrict to admins in a real app.
    }

    match /users/{userId}/{document=**} {
      // WARNING: Insecure rules for general user data.
      allow read, write: if true;
    }

    // Default catch-all is still open for now during development.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
