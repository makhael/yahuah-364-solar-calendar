/**
 * @fileoverview Firestore Security Rules for the Calendar application.
 *
 * Core Philosophy:
 * This ruleset enforces a user-ownership model for user settings, ensuring that only the authenticated user can access their own settings.
 * Calendar events, glossary terms, and podcast series are treated as public data, accessible to all users.
 *
 * Data Structure:
 * - User settings are stored under `/users/{userId}/settings/{settingsId}`.
 * - Calendar events are stored under `/calendar_events/{calendarEventId}`.
 * - Glossary terms are stored under `/glossary_terms/{glossaryTermId}`.
 * - Podcast series are stored under `/podcast_series/{podcastSeriesId}`.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read on appointments, but only authenticated writes.
    match /appointments/{appointmentId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    match /appointmentSummaries/{year} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    match /communityTopics/{topicId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }
    
    match /communityTopics/{topicId}/messages/{messageId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
    
    match /users/{userId}/{document=**} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    match /glossaryTerms/{termId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows public read and write access to podcast series.
     * @path /podcast_series/{podcastSeriesId}
     * @allow (get) - Any user, authenticated or unauthenticated, can get a podcast series.
     * @allow (list) - Any user, authenticated or unauthenticated, can list podcast series.
     * @allow (create) - Any authenticated user can create a podcast series.
     * @allow (update) - Any authenticated user can update a podcast series.
     * @allow (delete) - Any authenticated user can delete a podcast series.
     * @deny (create) - An unauthenticated user cannot create a podcast series.
     * @principle Grants public read access while restricting writes to authenticated users.
     */
    match /podcast_series/{podcastSeriesId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }
  }

  // Helper function to determine if the user is signed in.
  function isSignedIn() {
    return request.auth != null;
  }

  // Helper function to determine if the user is the owner of the resource.
  function isOwner(userId) {
    return request.auth.uid == userId;
  }

    // Helper function to determine if the user is the existing owner of the resource.
  function isExistingOwner(userId) {
    return isSignedIn() && isOwner(userId) && resource != null;
  }
}
