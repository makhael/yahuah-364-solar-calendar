
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function userHasRole(role) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    function isAdmin() {
      return userHasRole('admin');
    }

    function isLeader() {
        return userHasRole('leader');
    }

    match /appointments/{appointmentId} {
      allow get: if true;
      allow list: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /appointmentSummaries/{year} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /communityTopics/{topicId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();

      match /messages/{messageId} {
        allow get, list: if true;
        allow create, update, delete: if isSignedIn();
      }
    }
    
    match /dailyContent/{dateId} {
      match /chatMessages/{messageId} {
        allow get, list: if true;
        allow create, update, delete: if isSignedIn();
      }
    }

    match /mail/{mailId} {
      allow create: if true; 
      allow read, list: if isSignedIn();
    }

    match /emailTemplates/{templateId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if true;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
      
      match /notes/{noteId} {
        allow read, write: if isOwner(userId);
      }
      
      match /calendarPresets/{presetId} {
          allow read, write: if isOwner(userId);
      }

      match /calendarPreferences/{prefId} {
          allow read, write: if isOwner(userId);
      }

      match /chatBookmarks/{bookmarkId} {
          allow read, write: if isOwner(userId);
      }
    }

    match /glossaryTerms/{termId} {
      allow read: if true;
      allow create, update, delete: if isAdmin() || isLeader();
    }

    match /glossaryProposals/{proposalId} {
        allow create: if isSignedIn();
        allow get: if isSignedIn();
        allow update: if isSignedIn();
        allow delete: if isSignedIn();
        allow list: if isSignedIn();
    }
    
    match /scriptureReadings/{readingId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow list: if isSignedIn();
      allow update, delete: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin() || isLeader());
    }

    match /podcast_series/{podcastSeriesId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }
  }
}
