
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    match /appointments/{appointmentId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /appointmentSummaries/{year} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /communityTopics/{topicId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();

      match /messages/{messageId} {
        allow get, list: if true;
        allow create, update, delete: if isSignedIn();
      }
    }
    
    match /dailyContent/{dateId} {
      match /chatMessages/{messageId} {
        allow get, list: if true;
        allow create, update, delete: if isSignedIn();
      }
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    match /users/{userId}/notes/{noteId} {
      allow read, write: if isOwner(userId);
    }
    
    match /users/{userId}/calendarPresets/{presetId} {
        allow read, write: if isOwner(userId);
    }

    match /users/{userId}/calendarPreferences/{prefId} {
        allow read, write: if isOwner(userId);
    }

    match /glossaryTerms/{termId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /glossaryProposals/{proposalId} {
        allow create: if isSignedIn();
        allow read, list, get, update, delete: if isAdmin();
    }
    
    match /scriptureReadings/{readingId} {
      // Admins can read any scripture for moderation.
      // Users can read their own scriptures, or any approved scripture.
      allow get: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid) || resource.data.status == 'approved';
      
      // Admins can list all scriptures. Users can list scriptures they own or that are approved.
      // NOTE: This rule requires queries to include a filter on 'userId' or 'status' unless the user is an admin.
      allow list: if isAdmin() || (isSignedIn() && request.query.filters.map(f => f[0]).hasAny(['userId']));
      
      // Any signed-in user can create a submission.
      allow create: if isSignedIn();
      
      // Only the owner or an admin can update or delete a submission.
      allow update, delete: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
    }

    match /podcast_series/{podcastSeriesId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }
  }
}

    