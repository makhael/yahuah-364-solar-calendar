
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // This function is problematic and has been removed. Direct checks will be used instead.
    // function isAdmin() { ... }
    
    match /appointments/{appointmentId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /appointmentSummaries/{year} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /communityTopics/{topicId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();

      match /messages/{messageId} {
        allow get, list: if true;
        allow create, update, delete: if isSignedIn();
      }
    }
    
    match /dailyContent/{dateId} {
      match /chatMessages/{messageId} {
        allow get, list: if true;
        allow create, update, delete: if isSignedIn();
      }
    }

    match /users/{userId} {
      // An admin can get any user's profile. A user can get their own.
      allow get: if isOwner(userId) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow write: if isOwner(userId) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users {
        // Only admins can list all users.
        allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    match /users/{userId}/notes/{noteId} {
      allow read, write: if isOwner(userId);
    }
    
    match /users/{userId}/calendarPresets/{presetId} {
        allow read, write: if isOwner(userId);
    }

    match /users/{userId}/calendarPreferences/{prefId} {
        allow read, write: if isOwner(userId);
    }

    match /glossaryTerms/{termId} {
      allow read: if true;
      allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /glossaryProposals/{proposalId} {
        allow create: if isSignedIn();
        allow read, list, get, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    match /scriptureReadings/{readingId} {
      // Anyone can get an approved doc. Owners/Admins can get any.
      allow get: if resource.data.status == 'approved' || (isSignedIn() && (isOwner(resource.data.userId) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'));
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (isOwner(resource.data.userId) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    match /scriptureReadings {
      // An admin can list all scriptures.
      // Anyone else can list scriptures if they are filtering for approved ones.
      allow list: if (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin') || (request.query.limit <= 30 && request.query.where[2] == ["status", "==", "approved"]);
    }

    match /podcast_series/{podcastSeriesId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }
  }
}
